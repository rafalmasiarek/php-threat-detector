{
  "name": "rafalmasiarek/threat-detector",
  "description": "Heuristic, modular threat detection (signal-only) with weighted float scoring, predefined thresholds, and PSR-15 middleware for PSR-7 apps.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Rafa\u0142 Masiar\u0119k"
    }
  ],
  "require": {
    "php": ">=8.1",
    "psr/http-message": "^1.1 || ^2.0",
    "psr/http-server-middleware": "^1.0",
    "psr/http-server-handler": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "rafalmasiarek\\Threat\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "rafalmasiarek\\Threat\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}